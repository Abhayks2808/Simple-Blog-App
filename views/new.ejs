<%- include ('partials/header') %>  
    <div class="container mt-4">
        <div class=row>
            <div class="col-sm-12 col-lg-9">
                    <div class="card shadow border-0 ">          
                        <div class="card-body">
                          <h1 class="text-center">New Blog</h1>
                          <p>
                            <small class="text-muted">Fields marked * are required.</small>
                          </p>
                         <form action="/blogs" method="POST">
                        <div class="form-group">
                            <label for="exampleformcontrolinput1">Title</label>
                            <input type="text" placeholder="Blog Title" class="form-control" id="exampleformcontrolinput1" name="title" required>
                        </div>
                        <div class="form-group">
                           <label for="exampleformcontrolinput2">image</label>
                           <input type="text" placeholder="Image Url" class="form-control" id="exampleformcontrolinput2" name="image" required>
                        </div>
                        <div class="form-group">
                            <label for="exmpleFormcontrolTextara1">Blog Description</label>
                            <textarea class="form-control" placeholder="Blog Description" id="exampleFormcontrolTextarea1" rows="5" name="body" required></textarea>
                        </div>
                        <button type="submit" class="btn btn-dark btn-block">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <%- include ('partials/footer') %>