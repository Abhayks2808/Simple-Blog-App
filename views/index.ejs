<%- include ('partials/header') %>
    <div class="container mt-5">
        <div class="row">
            <% Blogs.forEach((Blog) => { %>
                <div class="col-lg-4 col-md-6 col-sm-12">
                   <div class="card indexCards shadow border-0 mt-4">
                       <img src="<%= Blog.image %>" alt="Blog image" class="img-fluid img-thumbnail" style="height:152px">
                       <div class="card-body">
                           <h5 class="card-title"><%= Blog.title %></h5>
                           <a href="/blogs/<%=Blog._id %>" class="btn btn-dark" style=color:#fff>Read More></a>
                       </div>
                   </div>
                </div>
            <% }) %>
        </div>
    </div>
<%- include ('partials/footer') %>